<!DOCTYPE html>
<html>
<head>
    <title>Gym Membership Selection</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 1em 0;
        }

        main {
            width: 70%;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            text-align: center;
        }

        .membership-button {
            padding: 10px 20px;
            margin: 10px;
            font-size: 16px;
            cursor: pointer;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
        }

        .membership-button:hover {
            background-color: #45a049;
        }

        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 1em 0;
        }
    </style>
    
    <script>
        function selectMembership(membershipType) {
            alert('You selected: ' + membershipType);
        }
    </script>


<script>
    function updateMembership(element) {
        var membershipType = element.getAttribute('data-membership');
        
        axios.post('/updateMembership', {
            membership: membershipType
        })
        .then(function (response) {
            console.log(response);
            // Handle success - maybe update the UI or redirect
        })
        .catch(function (error) {
            console.log(error);
            // Handle error
        });
    }
</script>

</head>
<body>
    <header>
        <h1>Hello <%=clientLogin.name%></h1>
    </header>

    <main>

        <h2>Select Your Membership Plan</h2>
        <button class="membership-button" onclick="selectMembership('Basic Plan')" ><a href="/basic_client">Basic Plan £25</a></button>
        <button class="membership-button" onclick="selectMembership('Standart Plan')"><a href="/standart">Standard Plan £35</a></button>
        <button class="membership-button" onclick="selectMembership('Premium Plan')"><a href="/premium">Premium Plan £45</a></button>
    </main>

    <footer>
        <p>Contact us: ValeryGym@fitnesscenter.com</p>
    </footer>
</body>
</html>
